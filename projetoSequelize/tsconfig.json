{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "dist",
      "rootDir": "src",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "strictNullChecks": true,
      "allowSyntheticDefaultImports": true,
      "lib": [
        "es5", "es6", "dom", "dom.iterable"
    ]
    },
    "include": ["src/**/*.ts", "src/config/database.js"],
    "exclude": ["node_modules", "dist",".sequelizerc"]
  }